#usda 1.0
(
    defaultPrim = "HiveScene"
)

def "HiveScene" (
    active = true
    references = @Resources/HiveScene.usdz@
)
{
    reorder nameChildren = ["Hive", "poi_Hive", "poi_StudyCorner", "poi_Lounges"]
    float3 xformOp:scale = (100, 100, 100)
    uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:orient", "xformOp:scale"]

    def Xform "poi_Hive" (
        active = true
        customData = {
            float3 rotationEulerHint = (0, 2.9670594, 0)
        }
    )
    {
        float2 ui:nodegraph:node:pos = (20, 20)
        int ui:nodegraph:node:stackingOrder = 1
        quatf xformOp:orient = (0.087155804, 0, 0.9961947, 0)
        float3 xformOp:scale = (1.5, 1.5, 1.5)
        float3 xformOp:translate = (-0.17599802, 1.4279845, 1.069991)
        uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:orient", "xformOp:scale"]

        def RealityKitCustomComponent "NYPCampus_PointOfInterestComponent"
        {
            string description = "A dynamic co-working space fostering collaboration and creativity."
            string id = "hiveInfo"
            string imageNames = "Hive"
            uniform token info:id = "NYPCampus.PointOfInterestComponent"
            token location = "Hive"
            string name = "Hive"
            string videoName = "null"
        }
    }

    def Xform "poi_StudyCorner" (
        active = true
        customData = {
            float3 rotationEulerHint = (0, 1.5707963, 0)
        }
    )
    {
