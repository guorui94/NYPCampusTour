        int ui:nodegraph:node:stackingOrder = 1
        quatf xformOp:orient = (0.70710677, 0, 0.70710677, 0)
        float3 xformOp:scale = (1.5, 1.5, 1.5)
        float3 xformOp:translate = (-3.3861895, 1.1621033, -0.44431737)
        uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:orient", "xformOp:scale"]

        def RealityKitCustomComponent "NYPCampus_PointOfInterestComponent"
        {
            string description = "A serene space designed for focused learning and deep work."
            string id = "studyCornerInfo"
            string imageNames = "Hivestudy"
            uniform token info:id = "NYPCampus.PointOfInterestComponent"
            token location = "Hive"
            string name = "Study Corner"
            string videoName = "null"
        }

        def RealityKitComponent "AmbientAudio"
        {
            uniform token info:id = "RealityKit.AmbientAudio"
        }
    }

    def Xform "poi_Lounges" (
        active = true
        customData = {
            float3 rotationEulerHint = (0, -0.69813174, 0)
        }
    )
    {
        quatf xformOp:orient = (0.9396926, 0, -0.34202012, 0)
        float3 xformOp:scale = (1.5, 1.5, 1.5)
        float3 xformOp:translate = (2.4690204, 1.1450856, -1.6245605)
        uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:orient", "xformOp:scale"]

        def RealityKitCustomComponent "NYPCampus_PointOfInterestComponent"
        {
            string description = "Several couches curved inwards. Students can relax, chat, and do work via tables."
            string id = "loungesInfo"
            uniform token info:id = "NYPCampus.PointOfInterestComponent"
            token location = "Hive"
            string name = "Lounges"
        }
    }
